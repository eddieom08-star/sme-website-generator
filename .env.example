# SME Website Generator - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Firecrawl API Key (for website scraping)
# Get yours at: https://firecrawl.dev/
FIRECRAWL_API_KEY=fc-xxxxx

# Apify API Token (for social media scraping)
# Get yours at: https://apify.com/
APIFY_API_TOKEN=apify_api_xxxxx

# Vercel Token (for deployment)
# Get yours at: https://vercel.com/account/tokens
VERCEL_TOKEN=xxxxx

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# Google Places API Key (for Google Business data)
# Get yours at: https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=

# 21st.dev API Key (for premium components)
# Get yours at: https://21st.dev/
TWENTYFIRST_API_KEY=

# Vercel Team ID (if deploying to a team account)
VERCEL_TEAM_ID=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development | staging | production)
ENVIRONMENT=development

# Debug mode (true | false)
DEBUG=true

# Redis URL (for job queue)
REDIS_URL=redis://localhost:6379

# Database URL (optional, for persistence)
# DATABASE_URL=postgresql://user:pass@localhost:5432/sme_generator

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
